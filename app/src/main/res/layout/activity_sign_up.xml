<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.smart.checkinrecycle.SignUpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_Back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="im_Back"
            android:src="@drawable/back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/re_mark"/>

            <TextView
                android:layout_marginTop="45dp"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textStyle="bold"
                android:textColor="#81C147"
                android:textSize="45dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <EditText
                android:layout_margin="2dp"
                android:hint = "아이디"
                android:textColorHint="#A9A9A9"
                android:textColor="#000000"
                android:textSize="20dp"
                android:inputType="text"
                android:backgroundTint="#81C147"
                android:id="@+id/et_Id"
                android:textCursorDrawable="@null"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:theme="@style/EditTheme"/>

            <Button
                android:id="@+id/check_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="확인"
                />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_margin="2dp"
                android:hint = "비밀번호"
                android:textColorHint="#A9A9A9"
                android:textColor="#000000"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:backgroundTint="#81C147"
                android:id="@+id/et_Password"
                android:textCursorDrawable="@null"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:theme="@style/EditTheme"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:passwordToggleEnabled="true">

            <EditText
                android:layout_margin="2dp"
                android:hint = "비밀번호 확인"
                android:textColorHint="#A9A9A9"
                android:textColor="#000000"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:backgroundTint="#81C147"
                android:id="@+id/et_PasswordCheck"
                android:textCursorDrawable="@null"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:theme="@style/EditTheme"/>
        </com.google.android.material.textfield.TextInputLayout>


        <EditText
            android:layout_margin="2dp"
            android:layout_gravity="center_horizontal"
            android:hint = "이름 "
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:textSize="20dp"
            android:inputType="text"
            android:backgroundTint="#81C147"
            android:id="@+id/et_Name"
            android:textCursorDrawable="@null"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:theme="@style/EditTheme"/>

        <EditText
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:hint = "휴대폰 번호 "
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:textSize="20dp"
            android:inputType="text"
            android:backgroundTint="#81C147"
            android:id="@+id/et_PhoneNum"
            android:textCursorDrawable="@null"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:theme="@style/EditTheme"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="완료"
            android:id="@+id/bt_success"
            android:clickable="true"
            android:onClick="btnSuccess"
            android:textSize="17dp"
            android:backgroundTint="#29C385"/>

    </LinearLayout>

</LinearLayout>